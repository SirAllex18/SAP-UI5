<!-- Fragments are a fantastic way to build re-usable artifacts without the need for a controller-->

<core:FragmentDefinition
    xmlns= "sap.m"
    xmlns:core= "sap.ui.core">
    <Dialog
        id="helloDialog"
        title="Hogwarts {/recipient/name}">
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"/>

        </content>
        <!-- Introducw a button in the Dialog box -->
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
    </Dialog>

</core:FragmentDefinition>
