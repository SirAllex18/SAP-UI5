<!-- Fragments are a fantastic way to build re-usable artifacts without the need for a controller-->

<core:FragmentDefinition
    xmlns= "sap.m"
    xmlns:core= "sap.ui.core">
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}">
        <!-- Intoduce a button in the Dialog box -->
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
    </Dialog>

</core:FragmentDefinition>
